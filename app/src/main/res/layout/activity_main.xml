<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Guess3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Guess #3"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess2check"
 />

    <EditText
        android:id="@+id/et_simple"
        android:layout_width="291dp"
        android:layout_height="77dp"
        android:layout_marginBottom="50dp"
        android:hint="Enter 4 letter guess here"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Guess1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:text="Guess #1"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Guess1check"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Guess #1 Check"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess1" />

    <TextView
        android:id="@+id/Guess2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Guess #2"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess1check" />

    <TextView
        android:id="@+id/Guess2check"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Guess #2 Check"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Guess!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/et_simple" />


    <TextView
        android:id="@+id/guess2hint"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Guess2check"
        app:layout_constraintTop_toBottomOf="@+id/guess2result" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess3check"
        app:layout_constraintVertical_bias="0.736" />

    <TextView
        android:id="@+id/guess1result"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/Guess1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guess1hint"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Guess1check"
        app:layout_constraintTop_toBottomOf="@+id/guess1result" />

    <TextView
        android:id="@+id/guess2result"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Guess2"
        app:layout_constraintTop_toBottomOf="@+id/guess1hint" />

    <TextView
        android:id="@+id/Guess3check"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Guess #3 Check"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Guess3" />

    <TextView
        android:id="@+id/guess3result"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Guess3"
        app:layout_constraintTop_toBottomOf="@+id/guess2hint" />

    <TextView
        android:id="@+id/guess3hint"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Guess3check"
        app:layout_constraintTop_toBottomOf="@+id/guess3result" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Restart"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/et_simple"
        app:layout_constraintTop_toBottomOf="@+id/guess3hint"
        app:layout_constraintVertical_bias="0.827" />

</androidx.constraintlayout.widget.ConstraintLayout>